    <style name="SelfDialogButton" parent="*android:style/Widget.Material.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dream_main_color</item>
    </style>

    <style name="SelfDialogButtonWhite" parent="*android:style/Widget.Material.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SelfActionBar" parent="android:style/Theme.Material"></style>

    <style name="SelfSwitch" parent="*android:style/Widget.Material.CompoundButton.Switch">
        <item name="android:track">@drawable/switch_track_material</item>
        <item name="android:thumb">@drawable/switch_thumb_material_anim</item>
        <item name="android:background">@drawable/control_background_40dp_material</item>
    </style>

    <style name="SelfAlertDialogMeter" parent="*android:style/AlertDialog.Material">
        <item name="*android:singleChoiceItemLayout">@layout/select_dialog_singlechoice_material_meter</item>
    </style>

    <style name="SelfAlertDialog" parent="*android:style/AlertDialog.Material">
        <item name="*android:singleChoiceItemLayout">@layout/select_dialog_singlechoice_material</item>
    </style>

    <style name="SelfProgressBarStyleSmall" parent="*android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small_material</item>
    </style>

    <style name="DreamCheckedTextView">
        <item name="*android:checkMarkGravity">start</item>
    </style>

