<?xml version="1.0" encoding="utf-8"?>
<com.dream.camera.ui.AdjustFlashPanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adjust_flash_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingTop="6dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:orientation="vertical" >

            <com.android.camera.ui.RotateLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/min_flash_level"
                    style="@style/DreamText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/min_make_up_level" />
            </com.android.camera.ui.RotateLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <SeekBar
                android:id="@+id/adjust_flash_seekbar"
                style="@style/DreamSeekbarExceptMaualModule"
                android:layout_width="match_parent"
                android:max="5"
                android:progress="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:orientation="vertical" >

            <com.android.camera.ui.RotateLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/max_flash_level"
                    style="@style/DreamText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/max_make_up_level" />
            </com.android.camera.ui.RotateLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <com.android.camera.ui.RotateLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/current_flash_level"
                style="@style/DreamText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/zoom_value_text_size"
                android:text="@string/min_make_up_level"/>
        </com.android.camera.ui.RotateLayout>
    </LinearLayout>
</com.dream.camera.ui.AdjustFlashPanel>