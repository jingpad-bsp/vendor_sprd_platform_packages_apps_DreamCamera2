<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:camera="http://schemas.android.com/apk/res/com.android.camera2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/light_portrait_display_frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp">

        <com.android.camera.MultiToggleImageButton
            android:id="@+id/light_portrait_display_toggle_button_dream"
            style="@style/TopPanelIcon"
            android:scaleType="center"
            camera:contentDescriptionIds="@array/light_portrait_display_descriptions"
            camera:imageIds="@array/light_portrait_display_icons" />
    </FrameLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" >

    </View>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.android.camera.MultiToggleImageButton
            android:id="@+id/portrait_refocus_toggle_button_dream"
            style="@style/TopPanelIcon"
            android:scaleType="center"
            camera:contentDescriptionIds="@array/portrait_refocus_descriptions"
            camera:imageIds="@array/portrait_refocus_descriptions" />
    </FrameLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" >

    </View>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp">

        <com.android.camera.MultiToggleImageButton
            android:id="@+id/camera_toggle_button_dream"
            style="@style/TopPanelIcon"
            android:scaleType="center"
            camera:contentDescriptionIds="@array/camera_id_descriptions"
            camera:imageIds="@array/camera_id_icons" />
    </FrameLayout>

</LinearLayout>
