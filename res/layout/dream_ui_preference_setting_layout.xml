<?xml version="1.0" encoding="utf-8"?>
<com.dream.camera.settings.DreamUIPreferenceSettingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dream_ui_preference_setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/return_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginEnd="8dip"
            android:clickable="true"
            android:src="@drawable/ic_ab_back_material"
            android:theme="@style/SelfActionBar" >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_camera_settings_category"
            android:textColor="@color/dream_preference_font_color_main"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dream_preference_delivier_color"
        android:src="@drawable/dream_settings_item_list_delivier" >
    </ImageView>

    <FrameLayout
        android:id="@+id/setting_frament_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

</com.dream.camera.settings.DreamUIPreferenceSettingLayout>
