<?xml version="1.0" encoding="utf-8"?>
<com.dream.camera.ui.SlidePanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slide_panel_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:visibility="gone"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/slide_panel_dot_3_layout"
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/slide_panel_dot_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_state_sprd_slide_dot" />

        <ImageView
            android:id="@+id/slide_panel_dot_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_state_sprd_slide_dot" />

        <ImageView
            android:id="@+id/slide_panel_dot_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_state_sprd_slide_dot" />
    </LinearLayout>
</com.dream.camera.ui.SlidePanelLayout>
