<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_enabled="false">
        <shape
            android:innerRadius="2dp"
            android:shape="ring"
            android:thickness="2dp"
            android:tint="@android:color/white"
            android:useLevel="false" >
            <solid android:color="#ff000000" />

            <size
                android:height="18dp"
                android:width="18dp" />
        </shape>
    </item>
    <item
        android:id="@+id/pressed"
        android:drawable="@drawable/dream_seekbar_thumb_pressed_to_unpressed"
        android:state_pressed="true"/>
    <item
        android:id="@+id/unpressed"
        android:drawable="@drawable/dream_seekbar_thumb_unpressed_to_pressed"/>

    <transition
        android:drawable="@drawable/dream_seekbar_thumb_unpressed_to_pressed_animation"
        android:fromId="@+id/unpressed"
        android:toId="@+id/pressed" />
    <transition
        android:drawable="@drawable/dream_seekbar_thumb_pressed_to_unpressed_animation"
        android:fromId="@+id/pressed"
        android:toId="@+id/unpressed" />

</animated-selector>